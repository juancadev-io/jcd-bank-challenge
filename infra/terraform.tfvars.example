# AWS Configuration
aws_region    = "us-east-1"
environment   = "dev"

# Domain
domain_name = "bank.juancamilofarfan.com"

# Cloudflare (create token at: https://dash.cloudflare.com/profile/api-tokens)
# Permissions needed: Zone:DNS:Edit for juancamilofarfan.com
cloudflare_api_token = "your-cloudflare-api-token"

# Compute (ECS Fargate)
fargate_cpu    = 256   # 0.25 vCPU
fargate_memory = 512   # 0.5 GB

# Networking
vpc_cidr = "10.0.0.0/16"

# Application Secrets (DO NOT commit real values)
encryption_key = "change-me-in-production-please"

# Monitoring (leave empty to skip email notifications)
alarm_email = ""
